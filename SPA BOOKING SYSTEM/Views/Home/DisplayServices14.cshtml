@model List<SPA_BOOKING_SYSTEM.Models.Table_Threading_Male>

@{
    ViewBag.Title = "DisplayServices14";
}

<div style="font-family:Algerian">
    <h2>Displaying the types of Threading (Male)</h2>
</div>

<div>
    <hr />
    <table>
        @foreach (var item in Model)
        {
            <tr>
                <td><h2 style="font-size:120%;"> <b>Area: @item.AREA </b></h2></td>
                <td> @Html.ActionLink("Add to Cart", "CartList", new { name = item.AREA }) </td>
            </tr>
            <tr>
                <td><b>&nbsp;Rs </b> @item.COST/-</td>
            </tr>
        }

        <tr>
            <td><h2 style="font-size:120%;"> <b>General Procedure: </b></h2><h2 style="font-size:130%;"> Hair to be threaded must be of 1mm in length. The area to be threaded is then exfoliated. The procedure is followed by cleansing the skin and then removing the unwanted hair one by one, using a thread. </h2></td>
        </tr>
    </table>

</div>

<br />
<br />
<div style="font-family:'Times New Roman'">
    <style>
        .btn {
            padding: 10px 25px;
            color: black;
            text-align: center;
            cursor: pointer;
            font-size: 20px;
            margin: 9px 5px;
        }

        .button1 {
            background-color: papayawhip;
            color: black;
            border: 4px solid #000000;
        }
    </style>

    <button class="btn button1">
        <b>
            @Html.ActionLink("Proceed for Appointment", "Slot")
        </b>
    </button>

</div>
