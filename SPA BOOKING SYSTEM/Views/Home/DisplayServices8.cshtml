@model List<SPA_BOOKING_SYSTEM.Models.Table_Wax>

@{
    ViewBag.Title = "DisplayServices";
}

<div style="font-family:Algerian">

    <h2>Displaying the types of Waxing (Female)</h2>

    <h4>Choose your own type</h4>
</div>

<div>

    <hr />

    <table>

        @foreach (var item in Model)
        {
            <tr>
                <td><h2 style="font-size:120%;"> <b> @item.WAXING_TYPE </b></h2></td>
                <td> @Html.ActionLink("Add to Cart", "CartList", new { name = item.WAXING_TYPE }) </td>
            </tr>
            <tr>
                <td><b>&nbsp;Waxing Area: </b>@item.WAXING_AREA</td>
            </tr>
            <tr>
                <td><b>&nbsp;Rs </b> @item.COST/-</td>
            </tr>
            <tr>
                <td><b>&nbsp;Item Used: </b> @item.ITEM</td>
            </tr>
        }

        <tr>
            <td><h2 style="font-size:120%;"> <b>General Procedure: </b></h2><h2 style="font-size:130%;"> The area to be waxed will be cleaned and made moist and then the process begins. </h2></td>
        </tr>

    </table>

</div>

<br />
<br />
<div style="font-family:'Times New Roman'">
    <style>
        .btn {
            padding: 10px 25px;
            color: black;
            text-align: center;
            cursor: pointer;
            font-size: 20px;
            margin: 9px 5px;
        }

        .button1 {
            background-color: papayawhip;
            color: black;
            border: 4px solid #000000;
        }
    </style>

    <button class="btn button1">
        <b>
            @Html.ActionLink("Proceed for Appointment", "Slot")
        </b>
    </button>

</div>